
<ul class="frame">
  <% for pet in @pets %>
  <li>
    <p><%= pet.name %></p>
    <img src="/images/<%= pet.image %>" />

    <% if pet.owner %>
    <p>Owned by <%= pet.owner.name %></p>
    <% else %>
    <form class="pet" action="/pets/adopt/1" method="post">
      <label>
        <select name="owner_id"> 
          <option value="1">Amanda</option>
          <option value="2">Pearl</option>
          <option value="3">Fred</option>
          <option value="4">Callum</option>
        </select>
      </label>
      <input class="fsSubmitButton" type="submit" value="Adopt Me!" />
    </form>
    <% end %>
  </li>
  <% end %>
</ul>


